{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules":{
    "no-console": 0,
    "semi": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 0,
    "react/jsx-curly-spacing": [2, {"when": "always", "spacing": {
      "objectLiterals": "never"
    }}]
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ]
}
